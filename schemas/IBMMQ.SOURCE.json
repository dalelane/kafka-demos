{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "MQOrder",
    "type": "object",
    "properties": {
      "customer": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "phone": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string"
              },
              "number": {
                "type": "string"
              }
            },
            "required": [
              "type",
              "number"
            ]
          },
          "email": {
            "type": "string"
          },
          "address": {
            "type": "string"
          },
          "postalZip": {
            "type": "string"
          },
          "region": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "phone",
          "email",
          "address",
          "postalZip",
          "region"
        ]
      },
      "product": {
        "type": "array",
        "items": [
          {
            "type": "object",
            "properties": {
              "brand": {
                "type": "string"
              },
              "item": {
                "type": "string"
              },
              "quantity": {
                "type": "integer"
              }
            },
            "required": [
              "brand",
              "item",
              "quantity"
            ]
          },
          {
            "type": "object",
            "properties": {
              "brand": {
                "type": "string"
              },
              "item": {
                "type": "string"
              },
              "quantity": {
                "type": "integer"
              }
            },
            "required": [
              "brand",
              "item",
              "quantity"
            ]
          }
        ]
      },
      "order": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string"
          }
        },
        "required": [
          "date"
        ]
      }
    },
    "required": [
      "customer",
      "product",
      "order"
    ]
}